<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">
    <top>
        <Rectangle fx:id="rect" width="100" height="100" arcWidth="10" arcHeight="10" fill="black" />
    </top>
    <bottom>
        <GridPane vgap="10" hgap="10">
            <padding>
                <Insets topRightBottomLeft="20" />
            </padding>
            <Label text="x: " GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="fieldX" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="y: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="fieldY" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Button text="OK" onAction="#translateRect" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        </GridPane>
    </bottom>
</BorderPane>
